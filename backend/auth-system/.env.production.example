# Production Environment Configuration Template
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=your-mysql-host
DB_PORT=3306
DB_USERNAME=your-db-username
DB_PASSWORD=your-secure-db-password
DB_DATABASE=auth_system_prod

# JWT Configuration (MUST be changed in production)
JWT_SECRET=your-super-secure-jwt-secret-key-256-bits-minimum
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-256-bits
JWT_REFRESH_EXPIRATION=7d

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_EXPIRATION_HOURS=1

# Rate Limiting (más restrictivo en producción)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS (especifica dominios exactos)
CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# Logging
LOG_LEVEL=error

# Health Check
HEALTH_CHECK_ENABLED=true